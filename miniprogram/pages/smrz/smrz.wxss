.container{
    margin-top: 30rpx;
}

.title {
    font-size: larger;
    font-weight: bold;
    color: #00008B;
    margin-bottom: 10rpx;
}


.weui-label:after {
    content: '*';
    color: red;

}

.row {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    margin-top: 10rpx;
    border-bottom: 1px solid #f1f1f1;
    font-size: 32rpx;
    color: #353535;
}

.row input {
    width: 100%;
    height: 100%;

}

.sex {
    width: 50%;
    margin-left: 200rpx;
    display: inline;
    justify-content: space-between;
}

.inp {
    position: relative;
    width: 100%;
    height: 80rpx;
}


.radiogroup {
    display: flex;
    flex-direction: row;
}

.radiobox {
    display: flex;
    flex-direction: row;
    margin-left: 50rpx;
}

.save {
    margin-top: 200rpx;
    border: 3px solid #00008B;
}