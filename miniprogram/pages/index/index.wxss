/**index.wxss**/

page {
  background-color: #ffffff;
  padding-bottom: 60rpx;
}

.banner{
  width:100%;
  height:273rpx;
}
.banner swiper{
  height:100%;
  width: 100%;
}
.banner image{
  width: 100%;
  height: 273rpx;
}
.major{
  padding:20rpx 80rpx;
  white-space: nowrap;
  border-bottom: 2px solid #f1f1f1;
}
.major .box{
  text-align: center;
  width:200rpx;
  display: inline-block;
  
}
.major .box image{
  width:80rpx;
  height:80rpx;
}
.major .txt{
  font-size:25rpx;
}
.login{
  width: 750rpx;
  height: 300rpx;
  display:flex;
  flex-direction: column;
  align-items:center;
  justify-content:center;
  margin-top: 40rpx;
}
.loginbtn{
  margin-top: 50rpx;
  
}
.loginbtn[plain]{
  border:3px solid #00008B;
}
.loginimg{
  height:50rpx;
}
